FROM python:3.8

RUN mkdir -p /opt/services/emptyproject
WORKDIR /opt/services/
RUN python -m venv emptyproject
WORKDIR emptyproject

COPY emptyproject/ .
COPY requirements.txt .
RUN pip install -r requirements.txt
RUN python emptyproject/manage.py makemigrations
RUN python emptyproject/manage.py migrate

CMD ["gunicorn", "--bind", "0.0.0.0:80", "--chdir", "emptyproject/", "emptyproject.wsgi"]